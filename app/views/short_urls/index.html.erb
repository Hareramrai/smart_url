<%- model_class = ShortUrl -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th>Short Url</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><%= link_to short_url.id, short_url_path(short_url) %></td>
        <td><%= short_url.url %></td>
        <td><%= link_to visit_url(short_url.url_key), visit_path(short_url.url_key) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      short_url_path(short_url), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_short_url_path(short_url), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      short_url_path(short_url),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_short_url_path,
            :class => 'btn btn-primary' %>
