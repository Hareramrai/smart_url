<%- model_class = ShortUrl -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @short_url.url %></dd>
  <dt><strong> Short URL:</strong></dt>
  <dd><%= link_to visit_url(@short_url.url_key), visit_path(@short_url.url_key) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              short_urls_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_short_url_path(@short_url), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              short_url_path(@short_url),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
